extends layout

block content
  h1= title
  p Welcome to #{title} this is my first application using express and node
  button(type="button", class="btn btn-secondary", onclick="update()") Press Me
  div(id="target") Display
  script.  
    var client_count = 0
    function update(){
      client_count ++;
      document.getElementById("target").innerHTML = `Value is ${client_count}`
    }
  

  